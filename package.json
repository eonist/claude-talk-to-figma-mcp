{
  "name": "claude-talk-to-figma-mcp",
  "description": "Claude Desktop Talk to Figma MCP",
  "version": "0.4.9",
  "module": "dist/talk_to_figma_mcp/server.js",
  "main": "dist/talk_to_figma_mcp/server.js",
  "bin": {
    "claude-talk-to-figma-mcp": "dist/talk_to_figma_mcp/server.js",
    "claude-talk-to-figma-mcp-socket": "dist/socket.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "TESTING.md"
  ],
  "type": "module",
  "scripts": {
    "start": "bun run dist/talk_to_figma_mcp/server.js",
    "socket": "bun run dist/socket.js",
    "setup": "./scripts/setup.sh",
    "build": "tsup && chmod +x dist/talk_to_figma_mcp/server.js dist/socket.js",
    "build:watch": "tsup --watch",
    "build:plugin": "node src/claude_mcp_plugin/build.js",
    "build:ui-old": "esbuild src/claude_mcp_plugin/src/ui.ts --bundle --outfile=src/claude_mcp_plugin/dist/ui.js --platform=browser",
    "build:ui-ts": "node src/claude_mcp_plugin/build-ts.js",
    "build:ui": "node src/claude_mcp_plugin/direct-build.js",
    "build:ui-legacy": "node src/claude_mcp_plugin/build.js",
    "watch:plugin": "nodemon --watch src/claude_mcp_plugin/src --ext js,jsx,ts --exec node src/claude_mcp_plugin/build.js",
    "dev": "bun run build:watch",
    "dev:plugin": "bun run watch:plugin",
    "build:all": "bun run build && bun run build:plugin && bun run build:ui",
    "dev:all": "concurrently \"bun run build:watch\" \"bun run watch:plugin\"",
    "pub:release": "bun run build && npm publish",
    "configure-claude": "node scripts/configure-claude.js",
    "test": "node scripts/test-integration.js",
    "test-local-images": "node scripts/test-local-images.js"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bun-types": "^1.2.9",
    "concurrently": "^9.1.2",
    "esbuild": "^0.25.3",
    "nodemon": "^3.1.10",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest",
    "reconnecting-websocket": "^4.4.0",
    "uuid": "latest",
    "ws": "latest",
    "zod": "latest"
  },
  "keywords": [
    "claude",
    "figma",
    "mcp",
    "plugin",
    "ai",
    "design",
    "automation"
  ],
  "author": "Xúlio Zé",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/arinspunk/claude-talk-to-figma-mcp"
  },
  "bugs": {
    "url": "https://github.com/arinspunk/claude-talk-to-figma-mcp/issues"
  },
  "homepage": "https://github.com/arinspunk/claude-talk-to-figma-mcp#readme"
}
