{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "outDir": "temp-dist",
    "rootDir": "src",
    "lib": ["ES2020", "DOM"],
    "declaration": false,
    "sourceMap": false,
    "allowJs": true
  },
  "include": ["src/client.ts", "src/ui.ts"],
  "exclude": ["node_modules", "dist"]
}
